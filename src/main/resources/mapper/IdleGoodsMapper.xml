<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rgtask.mapper.IdleGoodsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.rgtask.pojo.IdleGoods">
        <id column="id" property="id" />
        <result column="sponsor_id" property="sponsorId" />
        <result column="title" property="title" />
        <result column="label" property="label" />
        <result column="goods_name" property="goodsName" />
        <result column="description" property="description" />
        <result column="price" property="price" />
        <result column="create_date" property="createDate" />
        <result column="update_date" property="updateDate" />
        <result column="del_flag" property="delFlag" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, sponsor_id, title, label, goods_name, description, price, create_date, update_date, del_flag, remark
    </sql>

</mapper>
